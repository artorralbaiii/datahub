div(class="row flex-column .container-1")
    table(id="data-table" class="table table-striped table-bordered center" style="width:100%;")
        thead
            tr
                th Name
                th Position
                th Office
                th Extn.
                th Start Date
                th Salary
        tfoot
            tr
                th Name
                th Position
                th Office
                th Extn.
                th Start Date
                th Salary


div(class="modal fade" id="dlg-update-sel-rows" tabindex="-1" role="dialog" aria-labelledby="dlg-update-sel-rows-lbl" aria-hidden="true")
    div(class="modal-dialog" role="document")
        div(class="modal-content")
            div(class="modal-content")
                div(class="modal-header")
                    h5(class="modal-title" id="dlg-update-sel-rows-lbl") Update Selected Row(s)
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                div(class="modal-body")
                    form(id="frm-update-param")
                        div(class="form-group")
                            label(for="lbl-field") Field
                            select(class="form-control" id="fld-field" placeholder="Choose a field...")
                        div(class="form-group") 
                            label(for="fld-newvalue") New Value
                            input(type="text" class="form-control" id="fld-newvalue" placeholder="New Value...")
                div(class="modal-footer")
                    button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                    button(id="btn-update" type="button" class="btn btn-primary" data-dismiss="modal") Update


div(class="modal fade" id="dlg-add-record" tabindex="-1" role="dialog" aria-labelledby="dlg-add-record-lbl" aria-hidden="true")
    div(class="modal-dialog modal-lg" role="document")
        div(class="modal-content")
            div(class="modal-content")
                div(class="modal-header")
                    h5(class="modal-title" id="dlg-add-record-lbl") Add Record
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                div(class="modal-body")
                    form(id="frm-add-record")
                        div(class="row")
                            div(class="col-md-6")
                                div(class="form-group")
                                    label(for="lbl-name") Name
                                    input(type="text" class="form-control form-control-sm" id="fld-name" placeholder="Enter Name...")
                                div(class="form-group") 
                                    label(for="fld-office") Office
                                    input(type="text" class="form-control form-control-sm" id="fld-office" placeholder="Enter Office...")
                                div(class="form-group") 
                                    label(for="fld-startdate") Start Date
                                    input(type="date" class="form-control form-control-sm" id="fld-startdate" name="fld-startdate" placeholder="YYYY-MM-DD" required pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])/(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])/(?:30))|(?:(?:0[13578]|1[02])-31))" title="Enter a date in this format YYYY/MM/DD")
                            div(class="col-md-6")
                                div(class="form-group") 
                                    label(for="fld-position") Position
                                    input(type="text" class="form-control form-control-sm" id="fld-position" placeholder="Enter Position...")
                                div(class="form-group")
                                    label(for="lbl-extn") Extn
                                    input(type="text" class="form-control form-control-sm" id="fld-extn" placeholder="Enter Extn...")
                                div(class="form-group")
                                    label(for="lbl-salary") Salary
                                    input(type="number" class="form-control form-control-sm" id="fld-salary" placeholder="Enter Salary...")
                div(class="modal-footer")
                    button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                    button(id="btn-save" type="button" class="btn btn-primary" data-dismiss="modal") Save
 
